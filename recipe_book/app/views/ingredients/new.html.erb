<h1> Create a new Ingredient </h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
    <li style="color:red"> <%= error %> </li>
    <% end %>
<% end %>
<br>
<%= form_for @ingredient do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
<% end %>

<%= button_to "Home", @user, method: :get %>
