<h1> Login </h1>

<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <p style="color:red">  <%= error %> </p>
    <%end%>
<% end %>

<%= form_with model: @user, url: "/login", method: :post do |f| %>
    <%= f.label :username %> <br>
    <%= f.text_field :user_name %> <br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
    <%= f.submit "Login" %>
<% end %>